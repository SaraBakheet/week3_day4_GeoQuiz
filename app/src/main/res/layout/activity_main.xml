<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="20sp"
    android:backgroundTint="#000000"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingStart="30sp"
    tools:context=".MainActivity">



    <TextView
        android:id="@+id/question_tv"
        android:layout_width="407dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="#DDDFE8"
        android:paddingStart="30sp"
        android:paddingEnd="30sp"
        android:textColor="#545666"
        android:textSize="34sp"
        tools:text="@string/Q3" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60sp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/true_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:background="#67DF6D"
            android:text="@string/true_btn"
            android:textSize="20dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/false_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#EC3233"
            android:text="@string/false_btn"
            android:textSize="20dp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cheat_btn"
        android:layout_width="162dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:background="#B6A09E"
        android:text="@string/cheat_btn"
        android:textSize="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="40sp"
        android:background="#4F8DCA"
        android:text="@string/next_btn"
        android:textSize="20dp" />
</LinearLayout>

